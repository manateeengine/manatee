{
  // Note: a lot of these words are part of the Zig language but not picked up by cSpell. I should
  // probably make a cSpell PR addressing these at some point in the near future, but adding a few
  // custom dictionary words here and there works well enough for now
  "cSpell.words": [
    // Zig Words
    "anyerror",
    "anyopaque",
    "anytype",
    "callconv",
    "comptime",
    "errdefer",
    "deinit",
    "multisampled",
    "noalias",
    "orelse",
    "usingnamespace",
    "isize",
    "usize",
    "vtable",
    // GPU Words
    "cuda",
    "degamma",
    "imageless",
    "framebuffers",
    "micromap",
    "minmax",
    "multisample",
    "rdma",
    "rgba",
    "srgb",
    "subpass",
    "subpasses",
    "subresource",
    "swapchain",
    "texel",
    // Macos Words
    "autorelease",
    "borderless",
    "discardable",
    "metaclass",
    "miniaturizable",
    "nonactivating",
    "nonretained",
    "ivar",
    "objc",
    "stret",
    // Vulkan Words
    "aabb",
    "aabbs",
    "adobergb",
    "amdx",
    "astc",
    "bitmask",
    "blit",
    "colorburn",
    "colordodge",
    "directfb",
    "dolbyvision",
    "enumerant",
    "hardlight",
    "hardmix",
    "icompute",
    "imagepipe",
    "linearburn",
    "lineardodge",
    "linearlight",
    "lunarg",
    "memcpy",
    "multiview",
    "nalu",
    "nand",
    "overallocation",
    "pageable",
    "pinlight",
    "pname",
    "preinitialized",
    "pvrtc",
    "rasterizer",
    "raygen",
    "reconvergence",
    "sfixed",
    "sfloat",
    "sint",
    "snorm",
    "softlight",
    "softmix",
    "spir",
    "subresources",
    "sscaled",
    "sysmem",
    "timeframe",
    "ufloat",
    "unorm",
    "uscaled",
    "viewports",
    "vividlight",
    "xlib",
    "ycbcr",
    // Windows Words
    "dxgi",
    "HINSTANCE",
    "HMENU",
    "HREDRAW",
    "IDXGI",
    "lpfn",
    "lpsz",
    "modeless",
    "OVERLAPPEDWINDOW",
    "USEDEFAULT",
    "VREDRAW",
    "WNDCLASS",
    "WNDCLASSEXW",
    "WINAPI",
    "zigwin32",
    // Names / Credits
    "hashimoto",
    "objz",
    "spanzeri",
    "superauguste",
    // Misc
    "descendents", // How is this not in the default dictionary
    "dont",
    "vkguide",
  ],
  "cSpell.ignorePaths": [
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".zig-cache",
    "zig-out"
  ],
  "editor.tabSize": 2,
  // Ensures consistent line endings on Windows / Unix
  "files.eol": "\n",
  // Note, this won't work if using VSCode "workspaces", the repo must be opened directly
  "zig.buildOnSave": true,
  "zig.formattingProvider": "extension",
  "zig.zls.enabled": "on",
  "zig.zls.enableBuildOnSave": true,
  "[zig]": {
    // Only Zig files have a tab size of 4. This is to follow Zig's style guide defined in Zig's
    // standard library. Everything else has a tab size of 2 because I prefer 2 spaces lol
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.suggest.insertMode": "replace",
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "never",
    },
  },
}
