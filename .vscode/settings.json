{
  // Note: a lot of these words are part of the Zig language but not picked up by cSpell. I should
  // probably make a cSpell PR addressing these at some point in the near future, but adding a few
  // custom dictionary words here and there works well enough for now
  "cSpell.words": [
    // Zig words missing from dictionary
    "anyerror",
    "anyopaque",
    "anytype",
    "callconv",
    "comptime",
    "deinit",
    "noalias",
    "orelse",
    "usingnamespace",
    "usize",
    "vtable",
    // GPU Words
    "swapchain",
    // Macos words
    "borderless",
    "miniaturizable",
    "nonactivating",
    "nonretained",
    "ivar",
    "objc",
    "stret",
    // Windows words (I hate Hungarian Notation SO much)
    "dxgi",
    "HINSTANCE",
    "HREDRAW",
    "IDXGI",
    "lpfn",
    "lpsz",
    "OVERLAPPEDWINDOW",
    "USEDEFAULT",
    "VREDRAW",
    "WNDCLASS",
    "WNDCLASSEXW",
    "WINAPI",
    "zigwin32",
    // Names / Credits
    "hashimoto",
    "objz",
    "spanzeri",
    "superauguste",
    // Misc
    "vkguide",
  ],
  "cSpell.ignorePaths": [
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".zig-cache",
    "zig-out"
  ],
  "editor.tabSize": 2,
  // Ensures consistent line endings on Windows / Unix
  "files.eol": "\n",
  // Note, this won't work if using VSCode "workspaces", the repo must be opened directly
  "zig.buildOnSave": true,
  "zig.formattingProvider": "extension",
  "zig.zls.enabled": "on",
  "zig.zls.enableBuildOnSave": true,
  "[zig]": {
    // Only Zig files have a tab size of 4. This is to follow Zig's style guide defined in Zig's
    // standard library. Everything else has a tab size of 2 because I prefer 2 spaces lol
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.suggest.insertMode": "replace",
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "never",
    },
  },
}
